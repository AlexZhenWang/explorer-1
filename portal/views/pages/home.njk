{% set pageClass = 'home-page' %}
{% set menuKey = 'home' %}
{% set hideHeaderSearch = true %}
{% extends 'layouts/default.njk' %}

{% block main %}
  <div class="main-title"></div>
  <div class="home-search">
    <form class="home-search__container global-search" action="{{ baseUrl }}/search" method="get">
      <i class="fa fa-search"></i>
      <input name="q" type="search" class="form-control" aria-label="Search" autocomplete="off"
             placeholder="{{ _('search.placeholder') }}">
      <span class="error-message hide">{{ _('message.validation') }}</span>
      <button type="submit" class="btn btn-secondary">{{ _('button.search') }}</button>
    </form>
  </div>

  {% include 'partials/block-info.njk' %}

  <div class="chart-block block-section block-section--primary" data-stat="{{ statData }}">
    <div class="block-section__header--cols">
      <div>
        <h2>{{ _('common.field.transactionCount') }}</h2>
      </div>
      <div class="chart-block__switch">
        <button class="active" data-type="last24H">{{ _('button.chart.last24h') }}</button>
        <button data-type="last7D">{{ _('button.chart.last7d') }}</button>
        <button data-type="last30D">{{ _('button.chart.last30d') }}</button>
      </div>
    </div>

    <div class="block-section__content">
      <div id="tx-chart"></div>
    </div>
  </div>

  {% include 'partials/latest-blocks.njk' %}

  <div class="block-section block-section--primary">
    <div class="block-section__header--cols">
      <div>
        <h2>{{ _('section.latestTransactions') }}</h2>
      </div>
      <div class="extra-actions">
        <a class="btn btn-primary" href="{{ baseUrl }}/tx">{{ _('button.view') }}</a>
      </div>
    </div>
    <div class="block-section__content">
      {% include 'partials/tx-table.njk' %}
    </div>
  </div>
{% endblock %}
